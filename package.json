{
  "name": "totp-web",
  "version": "1.0.0",
  "description": "A web-compatible TOTP (Time-based One-Time Password) implementation using Web Crypto API",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
