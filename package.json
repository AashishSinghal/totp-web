  "license": "MIT",
  "devDependencies": {
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aashishwork/totp-web.git"
  },
  "bugs": {
    "url": "https://github.com/aashishwork/totp-web/issues"
  },
  "homepage": "https://github.com/aashishwork/totp-web#readme"
